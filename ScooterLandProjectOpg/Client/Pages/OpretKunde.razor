@code {
    // En ny kunde, der skal oprettes via formularen.
    private Kunde nyKunde = new();

    // En liste over KundeScooter-objekter, som brugeren kan tilføje til kunden.
    private List<KundeScooter> scootere = new();

    // Boolean, der styrer visning af bekræftelsesdialog (modal).
    private bool visBekræftelse = false;

    // Mulig fejlbesked, hvis der opstår fejl ved oprettelse.
    private string? fejlbesked;

    // Mulig succesbesked, hvis oprettelsen går godt.
    private string? succesbesked;

    // Tilføjer en ny scooter til listen.
    private void TilføjScooter()
    {
        scootere.Add(new KundeScooter());
    }

    // Fjerner en eksisterende scooter fra listen.
    private void FjernScooter(KundeScooter scooter)
    {
        scootere.Remove(scooter);
    }

    // Viser en bekræftelsesdialog, når formularen er valideret korrekt.
    private void VisBekræftelsesDialog()
    {
        fejlbesked = null;
        succesbesked = null;
        visBekræftelse = true;
    }

    // Annullerer bekræftelsen og lukker modal-vinduet.
    private void AnnullerBekræftelse()
    {
        visBekræftelse = false;
    }

    // Metode til at oprette kunden i databasen, og efterfølgende tilføje scootere.
    private async Task OpretEnKunde()
    {
        try
        {
            visBekræftelse = false; // Lukker bekræftelsesvinduet, da vi nu går videre.
            var response = await Http.PostAsJsonAsync("api/Kunde", nyKunde);
            // Sender en POST-anmodning med nyKunde til 'api/Kunde'.

            if (response.IsSuccessStatusCode)
            {
                var oprettetKunde = await response.Content.ReadFromJsonAsync<Kunde>();
                // Læser det oprettede kundeobjekt tilbage fra svaret.

                foreach (var scooter in scootere)
                {
                    // For hver scooter i listen, sæt KundeId til den netop oprettede kundes ID.
                    scooter.KundeId = oprettetKunde.KundeId;
                    await Http.PostAsJsonAsync($"api/KundeScooter/{oprettetKunde.KundeId}/add-scooter", scooter);
                    // Opretter scooteren via API'et, knyttet til den nye kunde.
                }

                nyKunde = new Kunde(); // Nulstiller nyKunde efter succes.
                scootere.Clear(); // Tømmer listen af scootere.
                succesbesked = "Kunden og scootere blev oprettet med succes!";
                // Viser en positiv besked til brugeren.
            }
            else
            {
                fejlbesked = "Der opstod en fejl under oprettelse af kunden.";
                // Viser en fejlbesked, hvis svaret ikke var success.
            }
        }
        catch (Exception ex)
        {
            fejlbesked = $"Fejl: {ex.Message}";
            // Opfanger alle exceptions og sætter fejlbeskeden.
        }
    }
}

@page "/opretkunde"
@using ScooterLandProjectOpg.Shared.Models
@inject HttpClient Http

@* Opretter en container med top-margin og plads til kortet, som indeholder formularen. *@
<div class="container mt-4">
    @* Et card-element, som rummer indholdet i en overskuelig boks. *@
    <div class="card">
        @* Card-header med blå baggrund og hvid tekst. *@
        <div class="card-header bg-primary text-white">
            @* Overskrift, der fortæller at vi opretter en kunde. *@
            <h3>Opret Kunde</h3>
        </div>
        @* Cardets hovedindholdsområde til formularen. *@
        <div class="card-body">
            @* Bruger EditForm, bundet til 'nyKunde', og ved valid indsending kaldes 'VisBekræftelsesDialog'. *@
            <EditForm Model="nyKunde" OnValidSubmit="VisBekræftelsesDialog">
                @* Tilføjer validering baseret på dataannotations. *@
                <DataAnnotationsValidator />
                @* En række med kolonner til inputfelter. *@
                <div class="row">
                    @* Første kolonne med lidt margin i bunden (mb-3). *@
                    <div class="col-md-6 mb-3">
                        @* Label til navnefeltet. *@
                        <label for="navn" class="form-label">Navn:</label>
                        @* Tekstfelt, der binder til nyKunde.Navn. *@
                        <InputText @bind-Value="nyKunde.Navn" id="navn" class="form-control" placeholder="Indtast navn" />
                        @* Viser eventuelle valideringsfejl for navnefeltet. *@
                        <ValidationMessage For="@(() => nyKunde.Navn)" />
                    </div>
                    @* Anden kolonne i samme række, ligeledes med margin i bunden. *@
                    <div class="col-md-6 mb-3">
                        @* Label til emailfeltet. *@
                        <label for="email" class="form-label">Email:</label>
                        @* Tekstfelt, der binder til nyKunde.Email. *@
                        <InputText @bind-Value="nyKunde.Email" id="email" class="form-control" placeholder="Indtast email" />
                        @* Viser eventuelle valideringsfejl for emailfeltet. *@
                        <ValidationMessage For="@(() => nyKunde.Email)" />
                    </div>
                    @* Tredje kolonne i en ny række, men fortsætter layoutet. *@
                    <div class="col-md-6 mb-3">
                        @* Label til telefonfeltet. *@
                        <label for="telefon" class="form-label">Telefon:</label>
                        @* Numerisk input, der binder til nyKunde.Telefonnummer. *@
                        <InputNumber @bind-Value="nyKunde.Telefonnummer" id="telefon" class="form-control" placeholder="Indtast telefonnummer" />
                        @* Viser eventuelle valideringsfejl for telefonnummerfeltet. *@
                        <ValidationMessage For="@(() => nyKunde.Telefonnummer)" />
                    </div>
                    @* Fjerde kolonne til adresse. *@
                    <div class="col-md-6 mb-3">
                        @* Label til adressefeltet. *@
                        <label for="adresse" class="form-label">Adresse:</label>
                        @* Tekstfelt, der binder til nyKunde.Adresse. *@
                        <InputText @bind-Value="nyKunde.Adresse" id="adresse" class="form-control" placeholder="Indtast adresse" />
                        @* Viser eventuelle valideringsfejl for adressefeltet. *@
                        <ValidationMessage For="@(() => nyKunde.Adresse)" />
                    </div>
                </div>

                @* Overskrift, hvor brugeren kan tilføje scooteroplysninger til kunden. *@
                <h4 class="mt-4">Tilføj Scootere</h4>
                @if (scootere.Any())
                {
                    @* Hvis der er tilføjet scootere, vises en tabel. *@
                    @* En tabel med kant, margentop og kolonneoverskrifter. *@
                    <table class="table table-bordered mt-3">
                        <thead class="table-light">
                            <tr>
                                <th>Mærke</th>
                                <th>Model</th>
                                <th>Registreringsnummer</th>
                                <th>Produktionsår</th>
                                <th>Handling</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var scooter in scootere)
                            {
                                @* Gennemløber listen af scootere. *@
                                <tr>
                                    <td>
                                        @* Input, der binder til scooterens mærke. *@
                                        <InputText @bind-Value="scooter.Maerke" class="form-control" />
                                    </td>
                                    <td>
                                        @* Input, der binder til scooterens model. *@
                                        <InputText @bind-Value="scooter.Model" class="form-control" />
                                    </td>
                                    <td>
                                        @* Input, der binder til scooterens registreringsnummer. *@
                                        <InputText @bind-Value="scooter.RegistreringsNummer" class="form-control" />
                                        @* Viser valideringsfejl, hvis nogen, for registreringsnummer. *@
                                        <ValidationMessage For="@(() => scooter.RegistreringsNummer)" />
                                    </td>
                                    <td>
                                        @* Numerisk input, der binder til produktionsår. *@
                                        <InputNumber @bind-Value="scooter.ProduktionsAar" class="form-control" />
                                        @* Viser eventuelle valideringsfejl for produktionsår. *@
                                        <ValidationMessage For="@(() => scooter.ProduktionsAar)" />
                                    </td>
                                    <td>
                                        @* Knap, der fjerner scooteren fra listen ved klik. *@
                                        <button class="btn btn-danger btn-sm" @onclick="() => FjernScooter(scooter)">Fjern</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    @* Hvis ingen scootere er tilføjet endnu, vises denne tekst. *@
                    <p class="text-muted">Ingen scootere tilføjet endnu.</p>
                }

                @* En container, der placerer knapperne på linje med mellemrum. *@
                <div class="d-flex mt-3">
                    @* Knap, der tilføjer en ny tom scooterpost i listen. *@
                    <button type="button" class="btn btn-secondary me-2" @onclick="TilføjScooter">Tilføj Scooter</button>
                    @* Knap, der indsender formularen (OnValidSubmit) for at oprette kunde. *@
                    <button type="submit" class="btn btn-primary ms-2">Opret Kunde</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

<!-- Bekræftelsesdialog -->
@if (visBekræftelse)
{
    @* Viser en modal, hvis 'visBekræftelse' er true. *@
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0, 0, 0, 0.5);">
        @* Gråt overlay med en semitransparent baggrund. *@
        <div class="modal-dialog">
            @* Modal-dialog uden angivet størrelse, normal default. *@
            <div class="modal-content">
                @* Selve modal-boksen. *@
                <div class="modal-header">
                    @* Header-sektion i modalen. *@
                    <h5 class="modal-title">Bekræft Oprettelse</h5>
                    @* Titel, der spørger om bekræftelse. *@
                    <button type="button" class="btn-close" @onclick="AnnullerBekræftelse"></button>
                    @* Knap, der annullerer bekræftelsen (lukker modal). *@
                </div>
                @* Modalens brødtekst. *@
                <div class="modal-body">
                    <p>Er du sikker på, at du vil oprette følgende kunde?</p>
                    <ul>
                        <li><strong>Navn:</strong> @nyKunde.Navn</li>
                        <li><strong>Email:</strong> @nyKunde.Email</li>
                        <li><strong>Telefon:</strong> @nyKunde.Telefonnummer</li>
                        <li><strong>Adresse:</strong> @nyKunde.Adresse</li>
                    </ul>
                    @* Viser en opsummering af de oplysninger, kunden har indtastet. *@
                </div>
                @* Modalens fod, med to knapper. *@
                <div class="modal-footer">
                    @* Knap, der faktisk udfører oprettelsen. *@
                    <button class="btn btn-success" @onclick="OpretEnKunde">Ja, opret</button>
                    @* Knap, der annullerer og lukker modal. *@
                    <button class="btn btn-secondary" @onclick="AnnullerBekræftelse">Annuller</button>
                </div>
            </div>
        </div>
    </div>
}

@if (fejlbesked != null)
{
    @* Viser en rød alert, hvis der er sat en fejlbesked. *@
    <div class="alert alert-danger mt-3">@fejlbesked</div>
}

@if (succesbesked != null)
{
    @* Viser en grøn alert, hvis der er sat en succesbesked. *@
    <div class="alert alert-success mt-3">@succesbesked</div>
}


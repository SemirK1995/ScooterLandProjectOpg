@page "/"

<div class="container mt-5">
    <div class="jumbotron text-center bg-primary text-white p-4 rounded">
        <h1 class="display-4">Velkommen til ScooterLand</h1>
        <p class="lead">Din platform til administration af scootere, kunder og ordrer.</p>
        <hr class="my-4">
        <p>Start med at udforske funktionerne eller opret en kunde med det samme!</p>
        <a class="btn btn-light btn-lg" href="opretkunde" role="button">Opret Kunde</a>
    </div>
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="3em" height="3em" viewBox="0 0 512 512" class="mb-3">
                        <path fill="currentColor" fill-rule="evenodd" d="M309.334 117.333c0-41.237-33.43-74.666-74.667-74.666l-4.097.11C191.238 44.904 160 77.471 160 117.333C160 158.571 193.43 192 234.667 192l4.097-.111c39.332-2.126 70.57-34.693 70.57-74.556M256 362.667c0 23.314 6.233 45.173 17.124 64H85.334v-76.8c0-62.033 47.668-112.614 107.383-115.104l4.616-.096H272c19.434 0 37.712 5.091 53.642 14.047C284.293 269.933 256 312.996 256 362.667m65.303 86.295L384 410.667l62.697 38.295l-17.046-71.463l55.795-47.794l-73.232-5.871L384 256l-28.214 67.834l-73.232 5.871l55.795 47.794z" clip-rule="evenodd" />
                    </svg>
                    <h5 class="card-title">Kunde Katalog</h5>
                    <p class="card-text">Få overblik over dine kunder og deres information.</p>
                    <a href="kundekatalog" class="btn btn-primary">Se Katalog</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="3em" height="3em" viewBox="0 0 24 24" class="mb-3">
                        <path fill="currentColor" d="M20.96 16.45c.01-.15.04-.3.04-.45v.5zM11 16c0 .71.15 1.39.42 2H6v1c0 .55-.45 1-1 1H4c-.55 0-1-.45-1-1v-8l2.08-6c.2-.58.76-1 1.42-1h11c.66 0 1.22.42 1.42 1L21 11v5c0-2.76-2.24-5-5-5s-5 2.24-5 5m-3-2.5c0-.83-.67-1.5-1.5-1.5S5 12.67 5 13.5S5.67 15 6.5 15S8 14.33 8 13.5M19 10l-1.5-4.5h-11L5 10zm3.87 11.19l-4.11-4.11c.41-1.04.18-2.26-.68-3.11c-.9-.91-2.25-1.09-3.34-.59l1.94 1.94l-1.35 1.36l-1.99-1.95c-.54 1.09-.29 2.44.59 3.35a2.91 2.91 0 0 0 3.12.68l4.11 4.1c.18.19.45.19.63 0l1.04-1.03c.22-.18.22-.5.04-.64" />
                    </svg>
                    <h5 class="card-title">Mekaniker Katalog</h5>
                    <p class="card-text">Administrer dine mekanikere og deres opgaver.</p>
                    <a href="mekanikercatalog" class="btn btn-primary">Se Mere</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="3em" height="3em" viewBox="0 0 8 8" class="mb-3">
                        <path fill="currentColor" d="M5.5 0A2.5 2.5 0 0 0 3 2.5c0 .32.08.62.19.91L.28 6.29c-.39.39-.39 1.05 0 1.44c.2.2.46.28.72.28s.52-.09.72-.28L4.6 4.82c.28.11.58.19.91.19a2.5 2.5 0 0 0 2.5-2.5c0-.16 0-.32-.03-.47l-.97.97h-2v-2l.97-.97C5.83.01 5.67.01 5.51.01zM1 6.5c.28 0 .5.22.5.5s-.22.5-.5.5S.5 7.28.5 7s.22-.5.5-.5" />
                    </svg>
                    <h5 class="card-title">Ordre Oversigt</h5>
                    <p class="card-text">Få overblik over dine eksisterende ordrer.</p>
                    <a href="ordreoversigt" class="btn btn-primary">Se Ordrer</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center align-items-center position-relative mt-4" style="height: 150px;">
    <div class="alert alert-light border rounded-3 shadow-sm text-center"
         style="max-width: 600px; width: 90%; padding: 15px; margin-bottom: 0;">
        <h6 class="text-primary fw-bold mb-2">Scooterland</h6>
        <p class="mb-1"><strong>Adresse:</strong> Hovedgade 123, 4000 Roskilde</p>
        <p class="mb-1"><strong>Telefon:</strong> 12 34 56 78</p>
        <p class="mb-1"><strong>Email:</strong> kontakt@scooterland.dk</p>
        <p class="mb-0"><strong>Dags dato:</strong> @DateTime.Now.ToString("dd-MM-yyyy")</p>
    </div>
</div>